<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:gravity="center"
		android:orientation="vertical"
		android:padding="20dp">

	<TextView android:id="@+id/text_winning_team"
			  android:layout_height="wrap_content"
			  android:layout_width="wrap_content"
			  android:layout_marginBottom="10dp"
			  android:gravity="center"
			  android:textSize="30dp" />

	<Button android:id="@+id/button_rematch"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:padding="10dp"
			android:textSize="20dp"
			android:text="@string/button_rematch"
			android:onClick="rematch" />

	<Button android:id="@+id/button_exit"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:layout_below="@id/button_new_match"
			android:layout_gravity="center"
			android:padding="10dp"
			android:textSize="20dp"
			android:text="@string/button_exit"
			android:onClick="exit" />

</LinearLayout>