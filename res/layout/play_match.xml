<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_height="fill_parent"
			  android:layout_width="fill_parent"
			  android:orientation="vertical"
			  android:padding="20dp" android:gravity="center">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				  android:layout_height="wrap_content"
				  android:layout_width="fill_parent"
				  android:orientation="horizontal">

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
					  android:layout_width="0dp"
					  android:layout_height="fill_parent"
					  android:layout_weight="40"
					  android:orientation="vertical">

			<TextView android:id="@+id/text_home_team"
					  android:layout_width="fill_parent"
					  android:layout_height="wrap_content"
					  android:gravity="center"
					  android:textSize="20dp"
					  android:textStyle="bold"
					  android:text="@string/text_home" />

			<TextView android:id="@+id/text_home_team_player_names"
					  android:layout_width="fill_parent"
					  android:layout_height="wrap_content"
					  android:gravity="center" />

			<TextView android:id="@+id/text_home_team_score"
					  android:layout_width="fill_parent"
					  android:layout_height="0dp"
					  android:layout_weight="70"
					  android:gravity="center"
					  android:padding="0dp"
					  android:textSize="100dp"
					  android:text="0" />

		</LinearLayout>

		<TextView android:id="@+id/text_score_dash"
				  android:layout_width="40dp"
				  android:layout_height="fill_parent"
				  android:layout_marginTop="35dp"
				  android:gravity="center"
				  android:textSize="100dp"
				  android:text="-" />

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
					  android:layout_width="0dp"
					  android:layout_height="fill_parent"
					  android:layout_weight="40"
					  android:orientation="vertical">

			<TextView android:id="@+id/text_home_team"
					  android:layout_width="fill_parent"
					  android:layout_height="wrap_content"
					  android:gravity="center"
					  android:textSize="20dp"
					  android:textStyle="bold"
					  android:text="@string/text_away" />

			<TextView android:id="@+id/text_away_team_player_names"
					  android:layout_width="fill_parent"
					  android:layout_height="wrap_content"
					  android:gravity="center" />

			<TextView android:id="@+id/text_away_team_score"
					  android:layout_width="fill_parent"
					  android:layout_height="0dp"
					  android:layout_weight="70"
					  android:gravity="center"
					  android:textSize="100dp"
					  android:text="0" />

		</LinearLayout>

	</LinearLayout>

</LinearLayout>