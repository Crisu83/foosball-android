<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_height="fill_parent"
			  android:layout_width="fill_parent"
			  android:orientation="vertical"
			  android:padding="20dp">

	<Button android:id="@+id/button_add_home_team_goal"
			android:layout_width="200dp"
			android:layout_height="fill_parent"
			android:layout_weight="60"
			android:layout_gravity="center"
			android:padding="10dp"
			android:textSize="30dp"
			android:text="@string/text_home_team"
			android:onClick="addHomeTeamGoal" />

	<TextView android:id="@+id/text_score"
			  android:layout_width="fill_parent"
			  android:layout_height="fill_parent"
			  android:layout_weight="40"
			  android:gravity="center"
			  android:textSize="80dp" />

	<Button android:id="@+id/button_add_away_team_goal"
			android:layout_width="200dp"
			android:layout_height="fill_parent"
			android:layout_weight="60"
			android:layout_gravity="center"
			android:padding="10dp"
			android:textSize="30dp"
			android:text="@string/text_away_team"
			android:onClick="addAwayTeamGoal" />

</LinearLayout>